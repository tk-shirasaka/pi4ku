.row
	.col.s12
		.card.large
			canvas#capture.col.s12.m12.l6.offset-l3(width=640, height=480)
			.card-action
				.col.s2
					a.btn-floating.waves-effect.red.modal-trigger(href='#chat')
						i.material-icons message
				.col.s10
					ul.tabs
						li.tab.col.s6
							a(href='#tab-speed') Speed
						li.tab.col.s6
							a(href='#tab-degree') Degree
				#tab-speed.col.s10.offset-s2
					p.range-field
						input#speed(type='range', min=0, max=10, value=0, disabled)
				#tab-degree.col.s10.offset-s2
					p.range-field
						input#degree(type='range', min=-90, max=90, value=0, disabled)
